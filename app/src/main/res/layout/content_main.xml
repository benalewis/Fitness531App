<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity" >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lift"
            android:id="@+id/liftTextView"
            android:textSize="25sp"
            android:textColor="#000000" />

        <Spinner
            android:layout_width="111dp"
            android:layout_height="43dp"
            android:id="@+id/mainLiftSpinner"
            android:spinnerMode="dropdown" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Week"
            android:id="@+id/weekTextView"
            android:textIsSelectable="false"
            android:textSize="25sp"
            android:layout_marginLeft="10sp"
            android:textColor="#000000" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:id="@+id/mainWeekSpinner"
            android:spinnerMode="dropdown" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Warmup"
            android:id="@+id/warmupTextView"
            android:textSize="30sp"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="warmup1"
            android:id="@+id/warmup1TextView"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5sp"
            android:textSize="30sp"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="warmup2"
            android:id="@+id/warmup2TextView"
            android:layout_gravity="center_horizontal"
            android:textSize="30sp"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="5sp"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="warmup3"
            android:id="@+id/warmup3TextView"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="5sp"
            android:textSize="30sp"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main531TextView"
            android:textSize="30sp"
            android:hint="5/3/1"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main531_1"
            android:layout_gravity="center_horizontal"
            android:textIsSelectable="false"
            android:textSize="30sp"
            android:hint="5/3/1"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main531_2"
            android:layout_gravity="center_horizontal"
            android:textSize="30sp"
            android:hint="5/3/1"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main531_3"
            android:layout_gravity="center_horizontal"
            android:textIsSelectable="false"
            android:textSize="30sp"
            android:hint="5/3/1"
            android:textColor="#000000" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0:00"
        android:id="@+id/mainTimerTextView"
        android:textSize="25sp"
        android:layout_below="@+id/mainStopStartButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESET"
        android:id="@+id/mainResetButton"
        android:background="#3399ff"
        android:paddingLeft="0dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/linearLayout2"
        android:layout_toRightOf="@+id/mainTimerTextView"
        android:layout_toEndOf="@+id/mainTimerTextView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/mainStopStartButton"
        android:background="#3399ff"
        android:textColor="#ffffff"
        android:layout_below="@+id/linearLayout2"
        android:layout_toLeftOf="@+id/mainTimerTextView"
        android:layout_toStartOf="@+id/mainTimerTextView" />

</RelativeLayout>
